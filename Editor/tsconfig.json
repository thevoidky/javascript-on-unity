{
  "include": [
    "./*.ts",
    "./*.js",
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES5",
    "lib": [
      "ES2015"
    ],
    "moduleResolution": "Node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": true,
    "checkJs": true
  }
}