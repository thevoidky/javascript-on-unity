{
  "exclude": [
    "**/node_modules",
    "webpack.config.*.js",
    "entry.json",
    "output.json",
    "TsTemporary~/",
    "**/.*.js",
    "**/.*.ts"
  ],
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "lib": [
      "ES2015"
    ],
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "TsTemporary~/",
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": true,
    "checkJs": true
  }
}